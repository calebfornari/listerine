<!doctype html>
<head>
  <meta charset="utf-8">
  <link rel="dns-prefetch" href="//ajax.googleapis.com">

  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Listerine Functional Monitors</title>
  <meta name="description" content="Listerine Functional Monitors">
  <meta name="author" content="Listerine">
  <meta name="application-name" content="Listerine Functional Monitors" />
  <meta name="msapplication-tooltip" content="Manage Listerine functional monitors." />

  <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/ui-lightness/jquery-ui.css" media="screen" rel="stylesheet" type="text/css" />
  <link href="/css/style.css" media="screen" rel="stylesheet" type="text/css" />
<body>
<div id="main">
  <div id="main_col">
    <%= yield %>
  </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
  $(function() {
    $('input.monitor-enable').click(function() {
      var $this = $(this);
      var enabled = $this.prop('checked');
      var id = $this.prop('id');
      var name = $this.next('input[type=hidden]').val();

      $.post('/monitors/' + id + '/enable', { enable: enabled, name: name })
    });
  });
</script>

</body>
</html>
